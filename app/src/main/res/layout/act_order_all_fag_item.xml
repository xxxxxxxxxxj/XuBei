<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/textView43"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="订单编号："
        android:textColor="#666666"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_product_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#666666"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView43"
        app:layout_constraintStart_toEndOf="@+id/textView43"
        tools:text="xxxxxxxx" />

    <TextView
        android:id="@+id/tv_pay_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:textColor="#0ea8f0"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView43"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="审核中" />


    <TextView
        android:id="@+id/textView71"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="押金："
        android:textColor="#151515"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_image"
        app:layout_constraintStart_toStartOf="@+id/tv_area" />

    <TextView
        android:id="@+id/tv_goods_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#333333"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_pay_status"
        app:layout_constraintStart_toEndOf="@+id/iv_image"
        app:layout_constraintTop_toTopOf="@+id/iv_image"
        tools:text="角色等级 30 英雄数量 138 皮肤数量340 荣耀黄金Ⅴ 白银框" />

    <TextView
        android:id="@+id/tv_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#999999"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/textView71"
        app:layout_constraintStart_toStartOf="@+id/tv_goods_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_goods_title"
        tools:text="英雄联盟-电信-玛德西亚" />

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="@+id/textView43"
        app:layout_constraintTop_toBottomOf="@+id/view"
        tools:srcCompat="@color/possible_result_points" />

    <TextView
        android:id="@+id/tv_foregift_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥0.00"
        android:textColor="#e41438"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView71"
        app:layout_constraintStart_toEndOf="@+id/textView71" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_marginTop="8dp"
        android:background="#f2f2f2"
        app:layout_constraintEnd_toEndOf="@+id/tv_pay_status"
        app:layout_constraintStart_toStartOf="@+id/textView43"
        app:layout_constraintTop_toBottomOf="@+id/tv_pay_status" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="¥0.00"
        android:textColor="#e41438"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_pay_status"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单金额："
        android:textColor="#151515"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_price"
        app:layout_constraintEnd_toStartOf="@+id/tv_price" />

    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_marginTop="8dp"
        android:background="#f2f2f2"
        app:layout_constraintEnd_toEndOf="@+id/tv_pay_status"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView43"
        app:layout_constraintTop_toBottomOf="@+id/textView71" />

    <TextView
        android:id="@+id/tv_last_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="服务结束时间：00小时00分00秒"
        android:textColor="#151515"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_price"
        app:layout_constraintStart_toStartOf="@+id/textView43" />

    <LinearLayout
        android:id="@+id/ll_btns"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:gravity="end|center_vertical"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_pay_status"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView43"
        app:layout_constraintTop_toBottomOf="@+id/tv_price"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/tv_wq"
            style="@style/order_list_btns"
            android:layout_marginTop="8dp"
            android:text="申请维权" />

        <TextView
            android:id="@+id/tv_xz"
            style="@style/order_list_btns"
            android:layout_marginTop="8dp"
            android:text="订单续租" />

        <TextView
            android:id="@+id/tv_gopay"
            style="@style/order_list_btns"
            android:layout_marginTop="8dp"
            android:text="去支付" />

        <TextView
            android:id="@+id/tv_r_zy"
            style="@style/order_list_btns"
            android:layout_marginTop="8dp"
            android:text="再次租用" />

        <TextView
            android:id="@+id/tv_wqjl"
            style="@style/order_list_btns"
            android:layout_marginTop="8dp"
            android:text="查看维权记录" />

        <TextView
            android:id="@+id/tv_cx_wq"
            style="@style/order_list_btns"
            android:layout_marginTop="8dp"
            android:text="撤销维权" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
