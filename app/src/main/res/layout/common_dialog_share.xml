<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_wechat_moments"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/ssdk_oks_classic_wechatmoments"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="微信朋友圈"
        android:textColor="#666666" />

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="#dddddd" />

    <TextView
        android:id="@+id/tv_wechat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/ssdk_oks_classic_wechat"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="微信好友"
        android:textColor="#666666" />

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="#dddddd" />

    <TextView
        android:id="@+id/tv_qq"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/ssdk_oks_classic_qq"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="QQ"
        android:textColor="#666666" />

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="#dddddd" />

    <TextView
        android:id="@+id/tv_qzone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/ssdk_oks_classic_qzone"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="QQ空间"
        android:textColor="#666666" />
</LinearLayout>