<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="activity"
            type="com.haohao.xubei.ui.module.order.OrderCreateActivity" />
    </data>

    <LinearLayout
        android:id="@+id/llRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:background="#f2f2f2">

        <include
            android:id="@+id/appbar"
            layout="@layout/common_title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.haohao.xubei.ui.views.NoDataView
            android:id="@+id/ndv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:visibility="gone" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:background="@drawable/act_order_type_bg"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_type_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="@{activity::onViewClicked}"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_1_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:gravity="center"
                            android:text="¥ 0.00"
                            android:textColor="#69b6ff"
                            android:textSize="19sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_margin="6dp"
                            android:background="#f2f2f2" />

                        <TextView
                            android:id="@+id/tv_1_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:gravity="center"
                            android:text="时租"
                            android:textColor="#666666" />

                    </LinearLayout>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="#f2f2f2" />

                    <LinearLayout
                        android:id="@+id/ll_type_2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="@{activity::onViewClicked}"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_2_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:gravity="center"
                            android:text="¥ 0.00"
                            android:textColor="#69b6ff"
                            android:textSize="19sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_margin="6dp"
                            android:background="#f2f2f2" />

                        <TextView
                            android:id="@+id/tv_2_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="日租"
                            android:textColor="#666666" />

                    </LinearLayout>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="#f2f2f2" />

                    <LinearLayout
                        android:id="@+id/ll_type_3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="@{activity::onViewClicked}"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_3_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:gravity="center"
                            android:text="¥ 0.00"
                            android:textColor="#69b6ff"
                            android:textSize="19sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_margin="6dp"
                            android:background="#f2f2f2" />

                        <TextView
                            android:id="@+id/tv_3_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="10小时"
                            android:textColor="#666666" />

                    </LinearLayout>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="#f2f2f2" />

                    <LinearLayout
                        android:id="@+id/ll_type_4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="@{activity::onViewClicked}"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_4_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:gravity="center"
                            android:text="¥ 0.00"
                            android:textColor="#69b6ff"
                            android:textSize="19sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_margin="6dp"
                            android:background="#f2f2f2" />

                        <TextView
                            android:id="@+id/tv_4_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="周租"
                            android:textColor="#666666" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_time_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="租赁时间"
                        android:textColor="#333333"
                        android:textSize="16sp" />

                    <com.haohao.xubei.ui.views.SubPlusTextView
                        android:id="@+id/sptv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#cccccc" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff">

                    <TextView
                        android:id="@+id/textView23"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="租金"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_rent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:text="¥ 0.00"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        app:layout_constraintBaseline_toBaselineOf="@+id/textView23"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/textView24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:text="押金"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/textView23"
                        app:layout_constraintTop_toBottomOf="@+id/textView115" />

                    <TextView
                        android:id="@+id/tv_deposit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥ 0.00"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        app:layout_constraintBaseline_toBaselineOf="@+id/textView24"
                        app:layout_constraintEnd_toEndOf="@+id/tv_rent" />

                    <View
                        android:id="@+id/textView115"
                        android:layout_width="0dp"
                        android:layout_height="1px"
                        android:layout_marginTop="16dp"
                        android:background="#cccccc"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView23" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView

                    android:id="@+id/textView27"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="提示：您的押金在订单完成后48小时内退回您的账户"
                    android:textColor="#999999"
                    android:textSize="12sp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_pay_type_balance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="#ffffff"
                    android:onClick="@{activity::onViewClicked}">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:src="@mipmap/act_order_ic_balance"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="余额支付"
                        android:textColor="#333333"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                        app:layout_constraintStart_toEndOf="@+id/imageView2"
                        app:layout_constraintTop_toTopOf="@+id/imageView2" />

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:text="账号余额："
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/textView7"
                        app:layout_constraintTop_toBottomOf="@+id/textView114" />

                    <TextView
                        android:id="@+id/tv_account_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="¥0.00"
                        android:textColor="#ff0000"
                        android:textSize="12sp"
                        app:layout_constraintBaseline_toBaselineOf="@+id/textView14"
                        app:layout_constraintStart_toEndOf="@+id/textView14" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_balance_select"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintBottom_toBottomOf="@+id/textView7"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/textView7"
                        app:srcCompat="@mipmap/ic_pay_type_selected" />

                    <TextView
                        android:id="@+id/btn_recharge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/act_main_me_btn_detail_bg"
                        android:onClick="@{activity::onViewClicked}"
                        android:paddingStart="24dp"
                        android:paddingTop="6dp"
                        android:paddingEnd="24dp"
                        android:paddingBottom="6dp"
                        android:text="充值"
                        android:textColor="@color/app_default_blue"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_account_balance"
                        app:layout_constraintEnd_toEndOf="@+id/iv_balance_select"
                        app:layout_constraintTop_toTopOf="@+id/tv_account_balance" />

                    <View
                        android:id="@+id/textView114"
                        android:layout_width="0dp"
                        android:layout_height="1px"
                        android:layout_marginTop="16dp"
                        android:background="#cccccc"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/imageView2"
                        app:layout_constraintTop_toBottomOf="@+id/imageView2" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_10"
                        android:text="第三方支付"
                        android:textColor="#a1a1a1"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#cccccc" />


                    <LinearLayout
                        android:id="@+id/ll_pay_type_alipay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:onClick="@{activity::onViewClicked}"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:src="@mipmap/common_icon_alipay" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="支付宝支付"
                            android:textColor="#333333" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/iv_alipay_select"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            app:srcCompat="@mipmap/ic_pay_type_normal" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginStart="16dp"
                        android:background="#cccccc" />

                    <LinearLayout
                        android:id="@+id/ll_pay_type_wechat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:onClick="@{activity::onViewClicked}"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:src="@mipmap/common_icon_wechat" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="微信支付"
                            android:textColor="#333333" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/iv_wechat_select"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            app:srcCompat="@mipmap/ic_pay_type_normal" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e5e5e5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="1px"
            android:background="#ffffff"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_play_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingStart="16dp"
                android:paddingEnd="0dp"
                android:text="实际付款：¥ 0.00"
                android:textColor="#ff0000" />

            <TextView
                android:id="@+id/tv_order_ok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#118eea"
                android:gravity="center"
                android:onClick="@{activity::onViewClicked}"
                android:text="去支付"
                android:textColor="#ffffff" />
        </LinearLayout>
    </LinearLayout>
</layout>
