<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/appbar"
            layout="@layout/common_title_layout" />

        <com.androidkun.xtablayout.XTabLayout
            android:id="@+id/xtl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            app:xTabDividerWidthWidthText="true"
            app:xTabIndicatorColor="@color/app_default_blue"
            app:xTabIndicatorHeight="3dp"
            app:xTabMode="fixed"
            app:xTabSelectedTextColor="@color/app_default_blue"
            app:xTabTextColor="#999999"
            app:xTabTextSize="16sp">

            <com.androidkun.xtablayout.TabItem
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="全部" />

            <com.androidkun.xtablayout.TabItem
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="收入" />

            <com.androidkun.xtablayout.TabItem
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="支出" />
        </com.androidkun.xtablayout.XTabLayout>

        <include
            android:id="@+id/ccl"
            layout="@layout/common_list_layout" />
    </LinearLayout>
</layout>